@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    <a href="@Url.Action("AllDone", "Items")">
        <span class="btn btn-default">Mark all done</span>
    </a>
</p>
<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IsDone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDateTime)
        </th>
        <th>
            Edit        
        </th>
        <th>
            Details
        </th>
        <th>
            Delete
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("ToggleDone", new { id=item.ItemID })">
                @if (item.IsDone)
                {
                    <span class="glyphicon glyphicon-check"></span>
                }
                else
                {
                    <span class="glyphicon glyphicon-unchecked"></span>
                }
            </a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DueDateTime)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Items", new { id=item.ItemID })"><span class="glyphicon glyphicon-pencil"></span></a>
        </td>
        <td>
            <a href="@Url.Action("Details", "Items", new { id=item.ItemID })"><span class="glyphicon glyphicon-search"></span></a>
        </td>    
        <td>    
            <a href="@Url.Action("Details", "Items", new { id=item.ItemID })"><span class="glyphicon glyphicon-remove"></span></a>
        </td>
    </tr>
}

</table>
