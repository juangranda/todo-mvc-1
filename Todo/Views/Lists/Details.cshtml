@model Todo.Models.List

@{
    ViewBag.Title = "Details";
}

<h2>List Details</h2>

<div>
    <hr />
        <h4>
            <b>List:</b>
            @Html.DisplayFor(model => model.ListTitle) &nbsp; &nbsp;
            <a href="@Url.Action("Edit", "Lists", new { id = Model.ListID })"><span class="glyphicon glyphicon-pencil"></span></a>
        </h4>
    <p>
        <a href="@Url.Action("Create", "Items")"><span class="btn btn-default">Add New Item</span></a>
    </p>
</div>

<table class="table">
    <tr>
        <th>
            
        </th>
        <th>
            Name
        </th>
        <th>
            Due Date
        </th>
        <th>
            Edit
        </th>
        <th>
            Details
        </th>
        <th>
            Delete
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                <a href="@Url.Action("ToggleDone", "Items", new { id=item.ItemID })">
                    @if (item.IsDone)
                {
                        <span class="glyphicon glyphicon-check"></span>
                    }
                    else
                    {
                        <span class="glyphicon glyphicon-unchecked"></span>
                    }
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDateTime)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Items", new { id=item.ItemID })"><span class="glyphicon glyphicon-pencil"></span></a>
            </td>
            <td>
                <a href="@Url.Action("Details", "Items", new { id=item.ItemID })"><span class="glyphicon glyphicon-search"></span></a>
            </td>
            <td>
                <a href="@Url.Action("Delete", "Items", new { id=item.ItemID })"><span class="glyphicon glyphicon-remove"></span></a>
            </td>
        </tr>
    }
</table>
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
