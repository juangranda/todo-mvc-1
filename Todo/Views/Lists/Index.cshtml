@model IEnumerable<Todo.Models.List>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create", "Lists")">
        <span class="btn btn-default">Create New List</span>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            List Title
        </th>
        <th>
            Edit
        </th>
        <th>
            Details
        </th>
        <th>
            Delete
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ListTitle)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Lists", new { id=item.ListID })"><span class="glyphicon glyphicon-pencil"></span></a>
        </td>
        <td>
            <a href="@Url.Action("Details", "Lists", new { id=item.ListID })"><span class="glyphicon glyphicon-search"></span></a>
        </td>
        <td>
            <a href="@Url.Action("Delete", "Lists", new { id=item.ListID })"><span class="glyphicon glyphicon-remove"></span></a>
        </td>
    </tr>
}

</table>
